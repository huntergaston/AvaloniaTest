<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AvaloniaTest.ViewModels;assembly=AvaloniaTest"
        Icon="resm:AvaloniaTest.Assets.smiley.ico"
        Title="TestApp">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  <StackPanel Orientation="Horizontal">
    <Button Content="PressME" Command="{Binding Increment}" />
  <TextBox Text="{Binding Number}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

  </StackPanel>
  
</Window>